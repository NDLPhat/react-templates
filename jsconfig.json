{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "checkJs": false,
    "paths": {
      "assets": ["./assets/*"],
      "redux": ["./redux/*"],
      "components": ["./components/*"],
      "pages": ["./pages/*"],
      "utils": ["./utils/*"],
      "config": ["./config/*"],
      "constants": ["./constants/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
